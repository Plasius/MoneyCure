<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="MoneyCure.Pages.SavingsPage">
    <ContentPage.Content>

        <RelativeLayout>
            <StackLayout RelativeLayout.WidthConstraint="{ConstraintExpression  
                    Type=RelativeToParent,  
                    Property=Width,  
                    Factor=1}"  >

                <Label Text="MoneyCure"
                       FontSize="42" 
                       HorizontalOptions="Center" 
                       VerticalOptions="Start"
                        
                       />
            </StackLayout>


            <StackLayout RelativeLayout.WidthConstraint="{ConstraintExpression  
                    Type=RelativeToParent,  
                    Property=Width,  
                    Factor=1}" >
                <StackLayout Margin="0">
                    <ImageButton Source="edit.png"
                    VerticalOptions="Start" 
                    HorizontalOptions="End"
                    Clicked="Editbt"
                    BackgroundColor="Transparent"/>
                    <Label Text="Savings" 
                   FontSize="Subtitle" 
                   FontAttributes="Italic" 
                   HorizontalOptions="Center" 
                   VerticalOptions="Start" 
                   Scale="2" 
                   Margin="0,75,0,3">
                    </Label>
                    <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
                    <BoxView BackgroundColor="Aqua"/>
                        <BoxView />
                        <BoxView />
                        <BoxView />
                        <BoxView />
                        <BoxView />
                        <BoxView />
                        <BoxView />
                        <BoxView />
                        <BoxView BackgroundColor="Aqua"/>
                    </StackLayout>
                    <Label Text="Add money" 
                   HorizontalOptions="Center" 
                   VerticalOptions="Center" 
                   Margin="0,50,0,0" 
                   Scale="1.2"></Label>
                    <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                        <Button Text="5" 
                        HorizontalOptions="Start" 
                        BorderColor="#211DF2" 
                        BorderWidth="1" 
                        MinimumWidthRequest="10" 
                        Margin="0,20,0,0" 
                            Clicked="Bt1_"
                        x:Name="Bt1"></Button>
                        <Button Text="10" 
                        BorderColor="#211DF2" 
                        BorderWidth="1" 
                        MinimumWidthRequest="10" 
                        Margin="0,20,0,0"
                            Clicked="Bt2_"
                        x:Name="Bt2"></Button>
                        <Button Text="25" 
                        BorderColor="#211DF2" 
                        BorderWidth="1" 
                        MinimumWidthRequest="10" 
                        Margin="0,20,0,0"
                            Clicked="Bt3_"
                        x:Name="Bt3"></Button>
                        <Button Text="50" 
                        BorderColor="#211DF2" 
                        BorderWidth="1" 
                        MinimumWidthRequest="10" 
                        Margin="0,20,0,0"
                        Clicked="Bt4_"
                        x:Name="Bt4"></Button>
                        <Button Text="..." 
                            BorderColor="#211DF2" 
                            BorderWidth="1" 
                            MinimumWidthRequest="10" 
                            Margin="0,20,0,0" 
                            Clicked="More"
                            x:Name="Bt5"></Button>
                    </StackLayout>
                    <Button Text="Add" 
                        HorizontalOptions="Center" 
                        Margin="0,10,0,0" 
                        Clicked="Addbt"/>
                    <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                    </StackLayout>
                </StackLayout>
            </StackLayout>


            <Grid
                RelativeLayout.WidthConstraint="{ConstraintExpression  
                    Type=RelativeToParent,  
                    Property=Width,  
                    Factor=1}"  
                RelativeLayout.YConstraint=
                        "{ConstraintExpression 
                            Type=RelativeToParent,
                            Property=Height,
                            Factor=1,
                            Constant=-84}">

                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="25" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <ImageButton Source="https://raw.githubusercontent.com/Plasius/MoneyCure/master/images/savings.png"
                                 Grid.Row="0" Grid.Column="0" BackgroundColor="Transparent" />

                <ImageButton Source="https://raw.githubusercontent.com/Plasius/MoneyCure/master/images/transactions.png"
                                 Grid.Row="0" Grid.Column="1" BackgroundColor="Transparent" Clicked="OnTransactionsClicked"/>

                <ImageButton Source="https://raw.githubusercontent.com/Plasius/MoneyCure/master/images/reports.png"
                                 Grid.Row="0" Grid.Column="2" BackgroundColor="Transparent" Clicked="OnReportsClicked"/>


                <Label HorizontalTextAlignment="Center" Text="Savings" Grid.Row="1" Grid.Column="0"></Label>
                <Label HorizontalTextAlignment="Center" Text="Transactions" Grid.Row="1" Grid.Column="1"></Label>
                <Label HorizontalTextAlignment="Center" Text="Reports" Grid.Row="1" Grid.Column="2"></Label>
            </Grid>
        </RelativeLayout>

        
    </ContentPage.Content>
</ContentPage>